<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:background="#FF4081">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_keyboard_backspace_black_24dp" />

            <TextView
                android:layout_centerHorizontal="true"
                android:id="@+id/tv_edit_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="24sp"
                android:layout_gravity="center"
                android:text="Edit Profile"
                android:textColor="#fff"
                android:textStyle="bold" />
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:padding="32dp"
                android:src="@mipmap/ic_launcher"
                android:layout_gravity="center"
                android:layout_below="@id/tv_edit_profile"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:padding="24dp"
            android:textSize="20sp"
            android:background="#eee" />

        <TextView
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="lance bogrol"
            android:drawableStart="@drawable/circle"
            android:drawablePadding="16dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="lance bogrol"
            android:drawableStart="@drawable/ic_person_outline_black_24dp"
            android:drawablePadding="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="http://google.com"
            android:drawableStart="@drawable/ic_language_black_24dp"
            android:drawablePadding="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="lance bogrol"
            android:drawableStart="@drawable/ic_file_black_24dp"
            android:drawablePadding="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Classified information"
            android:padding="24dp"
            android:textSize="20sp"
            android:background="#eee" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="user@email.com"
            android:drawableStart="@drawable/ic_email_black_24dp"
            android:drawablePadding="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_phone_black_24dp"
            android:drawablePadding="16dp"
            android:padding="16dp"
            android:text="1234567890" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Female"
            android:drawableStart="@drawable/ic_group_black_24dp"
            android:drawablePadding="16dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Done"
            android:textColor="#fff"
            android:padding="16dp"
            android:layout_margin="16dp"
            android:background="@drawable/btn_background" />
    </LinearLayout>
</ScrollView>